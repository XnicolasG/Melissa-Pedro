---
import Menu from '../sections/Header/Menu.astro'

---

<nav
    id="header"
    class="fixed h-auto flex flex-col justify-center items-center pb-6 pt-6 -top-1 md:-top-2 w-full mx-auto lg:my-2 z-20"
>
    <h1 id="title" class="text-3xl relative font-Halimun text-center flex items-start md:text-5xl text-emerald-900 transition-all duration-150">Melissa y Pedro</h1>
    <section id='logo' class="absolute opacity-0  w-full md:w-2/3 flex flex-col  items-center justify-center ">
        <div  class=" size-12 md:size-16 flex justify-center items-center  ">
            <img class="" src="/Logo.png" alt="Mellisa y Pedro">
        </div>
        <div class="flex w-full justify-center pb-2">
            <Menu />
        </div>
    </section>
</nav>

<script>
    window.addEventListener("scroll", function () {
        const header = document.getElementById('header');
        const title = document.getElementById('title');
        const logo = document.getElementById('logo');

        if (window.scrollY > 90) {
            header?.classList.add('bg-stone-200')
        }else{
            header?.classList.remove('bg-stone-200')
        }

        if (window.scrollY > 320) {
        title?.classList.remove('opacity-[0.6]', 'opacity-[0.1]');
        title?.classList.add('opacity-0');
        logo?.classList.remove('opacity-0')
        logo?.classList.add('opacity-1')
    } else if (window.scrollY > 220) {
        title?.classList.remove('opacity-[0.6]', 'opacity-0');
        logo?.classList.add('opacity-0')
        title?.classList.add('opacity-[0.1]');
    } else if (window.scrollY > 200) {
        title?.classList.remove('opacity-[0.1]', 'opacity-0');
        logo?.classList.add('opacity-0')
        title?.classList.add('opacity-[0.6]');
    } else {
        title?.classList.remove('opacity-[0.6]', 'opacity-[0.1]', 'opacity-0');
    }
    });
</script>
