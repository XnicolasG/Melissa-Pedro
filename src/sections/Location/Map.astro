---
import Google from "../../components/icons/Google";
const { imgMap, linkMap } = Astro.props;

---

<section class="flex flex-col justify-center w-full md:w-1/2 mb-24 md:mb-2 rounded lg:w-2/3 h-[620px]">
  <h2 class="mx-auto text-gray-700/80 text-2xl md:text-3xl my-2">¿Dónde nos casamos?</h2>

  <div
    class={`group h-full ${imgMap} bg-center object-fit overflow-hidden `}
  >
    <section
      class="grid justify-center items-center w-full h-full backdrop-blur-sm bg-white/20 translate-y-[100%] group-hover:translate-y-0 transition-all duration-300"
    >
    <div>

      <h2 class="mx-auto text-gray-700/80 text-2xl">Santuario de Las Lajas</h2>
      
      <a
      class="py-2 px-4 flex items-center justify-center gap-x-2 bg-blue-400 text-white text-lg font-semibold rounded-lg hover:scale-110 hover:bg-blue-500/80 transition-all durantion-110"
      href={linkMap}
      target="_blank"
      >
      <p>Ver mapa</p>
      <Google />
    </a>
  </div>
    </section>
  </div>
</section>
