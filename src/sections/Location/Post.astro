---
import { Image } from "astro:assets";
import lajas  from "../../../public/img/lajas.jpg";
import HeaderPost from "./HeaderPost.astro";
import FooterPost from "./FooterPost.astro";

const recommendations = [
    'Santuario de las Lajas',
    'Capilla Privada',
    'Hora de inicio 2pm',
]
---

<section class="group flex flex-col items-center justify-center w-full md:w-1/2 lg:w-1/3 h-[600px] lg:h-[700px] overflow-hidden ">
    <HeaderPost />
    <div class="mx-auto w-full h-full  flex items-center justify-center overflow-hidden  group-hover:h-full group-hover:w-full transition-all">
        <Image 
        class="w-full  grayscale-70 opacity-50  group-hover:opacity-100 group-hover:scale-110 transition-all"
        src={lajas} 
        alt='Santuario Las Lajas'/>
    </div>
    <FooterPost />
</section>





